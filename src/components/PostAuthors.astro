---
import Button from "./Button.astro";
import authorsDict from '../authors.json';
let { authorsKeys } = Astro.props;
let authors = authorsKeys.map((key) => authorsDict[key]).filter(Boolean);
---

{authors.map(author => (
  <>
  <div class="flex w-full items-center font-sans px-4 py-12">
    <img class="w-10 h-10 rounded-full mr-4" src={`${author.image}`} alt={`Avatar of ${author.name}`} />
    <div class="flex-1 px-2">
      <p class="text-base font-bold md:text-xl leading-none mb-2">{author.name}</p>
      <p class="text-gray-600 text-xs md:text-base">{author.bio} <a class="text-green-500 no-underline hover:underline" href={`${author.link}`}>{author.anchorText}</a></p>
    </div>
    <div class="justify-end">
      <Button url="/somewhere" text="Leer mÃ¡s" attrs={{ rel: 'author' }} />
    </div>
  </div>
  </>
))}