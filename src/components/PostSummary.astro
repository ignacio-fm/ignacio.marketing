---
import { formatDate } from '../utils';

const { postTitle, url, postImage, postDescription, publishedTime, tags, index } = Astro.props;

const dateFormatted = formatDate(publishedTime, 'es-ES', { year: 'numeric', month: 'long', day: 'numeric' });

const conditionalClasses = {
    container: index % 2 === 0 ? "" : "md:flex-row-reverse",
    image: index % 2 === 0 ? "md:rounded-l-lg" : "md:rounded-r-lg"
};
---

<a href={url} class={`group flex flex-col items-stretch bg-white border border-gray-200 rounded-lg shadow md:flex-row mb-20 ${conditionalClasses.container}`}>
    <div class=`md:w-1/2 overflow-hidden rounded-lg md:rounded-none ${conditionalClasses.image}`>
        <img class="transform transition-transform duration-500 group-hover:scale-105 object-cover w-full h-full rounded-lg md:rounded-none" src={postImage} alt={postTitle}>
    </div>

    <div class="p-12 leading-normal text-left md:w-1/2">
        <h3 class="mb-2 md:mb-5 text-2xl md:text-4xl font-bold tracking-tight">{postTitle}</h3>
        <p class="mb-3 font-medium md:text-lg">{postDescription}</p>
        <p class="mb-3 text-sm md:text-base">Publicado el {dateFormatted}</p>
        <ul class="flex">
            {tags.map((tag) => (
                <li class="me-2 backdrop-blur-sm max-md:bg-black/10 border rounded-md px-3 py-2">
                    {tag}
                </li>
            ))}
        </ul>
    </div>
</a>


