---
import { SEO } from 'astro-seo';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;

const date = new Date(frontmatter.publishedTime)
const options = { year: 'numeric', month: 'long', day: 'numeric' };
const dateFormatted = date.toLocaleDateString('es-ES', options)
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<SEO
			title={frontmatter.title}
			description={frontmatter.description}
			openGraph={{
				basic: {
					title: frontmatter.title,
					type: "article",
					image: frontmatter.image,
				},
				article: {
					publishedTime: frontmatter.publishedTime,
					modifiedTime: frontmatter.modifiedTime,
					expirationTime: frontmatter.expirationTime,
					authors: frontmatter.authors,
					tags: frontmatter.tags,
				}
			}}
			extend={{
				link: [{ rel: "icon", type:"image/svg+xml", href:"/favicon.svg" }]
			}}
		/>
	</head>
	<body>
		<Header/>
		<main class="container w-full md:max-w-3xl mx-auto pt-20">
			<article class="prose lg:prose-xl w-full px-4 md:px-6 text-xl text-gray-800 leading-normal">
				<div class="font-sans">
					<h1 class="font-bold font-sans break-normal text-gray-900 pt-6 pb-2 text-3xl md:text-4xl">{frontmatter.title}</h1>
					<p class="text-sm md:text-base font-normal text-gray-600">Publicado el {dateFormatted}</p>
				</div>
				<slot />
			</article>
		</main>
		<Footer/>
	</body>
</html>